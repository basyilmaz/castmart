{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE"
    },
    "deploy": {
        "numReplicas": 1,
        "startCommand": "/bin/sh -c 'php -S 0.0.0.0:${PORT} -t public public/index.php'",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 5
    }
}