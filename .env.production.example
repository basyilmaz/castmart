# ===========================================
# CastMart Production Environment Configuration
# ===========================================
# Bu dosya Railway deployment için hazırlanmıştır
# castmart.castintech.com

APP_NAME=CastMart
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_DEBUG_ALLOWED_IPS=
APP_URL=https://castmart.castintech.com
APP_ADMIN_URL=admin
APP_TIMEZONE=Europe/Istanbul
APP_VERSION=1.0.0

APP_LOCALE=tr
APP_FALLBACK_LOCALE=tr
APP_FAKER_LOCALE=tr_TR

APP_CURRENCY=TRY

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ===========================================
# DATABASE - Railway MySQL
# ===========================================
DB_CONNECTION=mysql
DB_HOST=${MYSQLHOST}
DB_PORT=${MYSQLPORT}
DB_DATABASE=${MYSQLDATABASE}
DB_USERNAME=${MYSQLUSER}
DB_PASSWORD=${MYSQLPASSWORD}
DB_PREFIX=

# ===========================================
# SESSION & CACHE
# ===========================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.castintech.com

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=public
QUEUE_CONNECTION=database

# Redis Cache (Railway Redis)
CACHE_STORE=redis
CACHE_PREFIX=castmart_

REDIS_CLIENT=phpredis
REDIS_HOST=${REDISHOST}
REDIS_PASSWORD=${REDISPASSWORD}
REDIS_PORT=${REDISPORT}

# ===========================================
# MAIL (SMTP)
# ===========================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@castintech.com
MAIL_FROM_NAME="CastMart"

# ===========================================
# AWS S3 (Opsiyonel - Dosya Depolama)
# ===========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-central-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ===========================================
# TRENDYOL API
# ===========================================
TRENDYOL_API_KEY=
TRENDYOL_API_SECRET=
TRENDYOL_SUPPLIER_ID=
TRENDYOL_ENABLED=true

# ===========================================
# IYZICO ÖDEME
# ===========================================
IYZICO_API_KEY=
IYZICO_SECRET_KEY=
IYZICO_MODE=live
IYZICO_BASE_URL=https://api.iyzipay.com

# ===========================================
# KARGO ENTEGRASYONLARI
# ===========================================
# Aras Kargo
ARAS_API_URL=https://customerws.arfrm.com:443
ARAS_USERNAME=
ARAS_PASSWORD=
ARAS_CUSTOMER_CODE=

# MNG Kargo
MNG_API_URL=https://service.mngkargo.com.tr/api
MNG_API_KEY=
MNG_SECRET_KEY=
MNG_CUSTOMER_NUMBER=

# Yurtiçi Kargo
YURTICI_API_URL=https://webservices.yurticikargo.com
YURTICI_USERNAME=
YURTICI_PASSWORD=
YURTICI_USER_LANGUAGE=TR

# ===========================================
# SMS ENTEGRASYONLARI
# ===========================================
SMS_ENABLED=true
SMS_DEFAULT_DRIVER=netgsm

# Netgsm
NETGSM_USERCODE=
NETGSM_PASSWORD=
NETGSM_HEADER=CASTMART

# İletimerkezi
ILETIMERKEZI_ENABLED=false
ILETIMERKEZI_API_KEY=
ILETIMERKEZI_API_HASH=
ILETIMERKEZI_SENDER=CASTMART

# ===========================================
# MULTI-TENANT AYARLARI
# ===========================================
MULTI_TENANT_ENABLED=false
TENANT_IDENTIFICATION=subdomain
TENANT_CENTRAL_DOMAIN=castintech.com
TENANT_SUBDOMAIN_SUFFIX=.castintech.com
TENANT_DATABASE_MODE=single

# ===========================================
# PAZARLAMA
# ===========================================
LOYALTY_ENABLED=true
COUPONS_ENABLED=true
REFERRAL_ENABLED=true
EMAIL_MARKETING_ENABLED=true
PUSH_NOTIFICATIONS_ENABLED=false

# ===========================================
# MONITORING (Opsiyonel)
# ===========================================
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
